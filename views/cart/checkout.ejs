<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Checkout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://www.paypal.com/sdk/js?client-id=Ac_sDhEZZDYBu4hRTa-J1VrrcyxacLD4mZtnbByf9EBqRcjX4cCeNEYOn_BhVaBWii6xBQGF7V1C6riX&currency=USD"></script>
</head>
<body>
  <%- include('../partials/navbar', { user: user, activePage: 'cart' }) %>

  <div class="container py-4">
    <h1 class="mb-4">Checkout</h1>

    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(err => { %>
          <p><%= err %></p>
        <% }) %>
      </div>
    <% } %>
    <% if (messages && messages.length) { %>
      <div class="alert alert-success">
        <% messages.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>

    <% if (!items || items.length === 0) { %>
      <p>Your cart is empty. <a href="/books">Browse books</a>.</p>
    <% } else { %>
      <div class="table-responsive mb-4">
        <table class="table table-striped align-middle">
          <thead>
            <tr>
              <th>Title</th>
              <th>Qty</th>
              <th>Price</th>
              <th>Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(item => { %>
              <tr>
                <td><%= item.title %></td>
                <td><%= item.quantity %></td>
                <td>$<%= item.price.toFixed(2) %></td>
                <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="3" class="text-end">Total:</th>
              <th>$<%= total.toFixed(2) %></th>
            </tr>
          </tfoot>
        </table>
      </div>

      <!-- PayPal button -->
      <div id="paypal-button-container" class="mb-3"></div>

      <!-- Fake Quick‑Pay button -->
      <div class="text-end">
        <form action="/checkout/fake" method="POST" class="d-inline">
          <button type="submit" class="btn btn-outline-secondary">
            Quick Pay (Fake)
          </button>
        </form>
      </div>
    <% } %>
  </div>

  <script>
    paypal.Buttons({
      createOrder: (data, actions) => {
        return actions.order.create({
          purchase_units: [{
            amount: { value: '<%= total.toFixed(2) %>' }
          }]
        });
      },
      onApprove: (data, actions) => {
        return actions.order.capture().then(details => {
          const capture = details.purchase_units[0].payments.captures[0];
          return fetch('/payment-complete', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              amount: capture.amount.value,
              transactionID: capture.id
            })
          })
          .then(res => res.json())
          .then(resp => {
            if (resp.success) {
              window.location.href = '/dashboard';
            } else {
              alert('Payment recorded but server error.');
            }
          });
        });
      },
      onError: err => {
        console.error(err);
        alert('Payment error—please try again.');
      }
    }).render('#paypal-button-container');
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
