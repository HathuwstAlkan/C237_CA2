<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Your Cart</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet">
</head>
<body>
  <%- include('../partials/navbar', { user: user, activePage: 'cart' }) %>

  <div class="container py-4">
    <h1 class="mb-4">Your Cart</h1>

    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(err => { %>
          <p><%= err %></p>
        <% }) %>
      </div>
    <% } %>
    <% if (messages && messages.length) { %>
      <div class="alert alert-success">
        <% messages.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>

    <% if (items.length === 0) { %>
      <p>Your cart is empty. <a href="/books">Browse books</a>.</p>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead>
            <tr>
              <th>Title</th>
              <th>Qty</th>
              <th>Price</th>
              <th>Subtotal</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(item => { %>
              <tr>
                <td><%= item.title %></td>
                <td>
                  <form action="/cart/<%= item.cart_item_id %>/update" method="POST" class="d-inline">
                    <input
                      type="number"
                      name="quantity"
                      value="<%= item.quantity %>"
                      min="1"
                      class="form-control form-control-sm d-inline w-auto">
                    <button type="submit" class="btn btn-sm btn-outline-primary ms-1">Update</button>
                  </form>
                </td>
                <td>$<%= Number(item.price).toFixed(2) %></td>
                <td>$<%= (Number(item.price) * item.quantity).toFixed(2) %></td>
                <td>
                  <form action="/cart/<%= item.cart_item_id %>/delete" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="3" class="text-end">Total:</th>
              <th>$<%= total.toFixed(2) %></th>
              <th></th>
            </tr>
          </tfoot>
        </table>
      </div>
      <div class="mt-3">
        <a href="/books" class="btn btn-secondary">Continue Shopping</a>
        <a href="/checkout" class="btn btn-success ms-2">Proceed to Checkout</a>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
