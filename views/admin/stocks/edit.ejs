<!DOCTYPE html>
<html>
<head>
  <title>Edit Stock</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('../../partials/navbar', { user: user, activePage: 'stocks' }) %>

  <div class="container py-4" style="max-width: 760px;">
    <h1 class="mb-3">Edit Stock</h1>

    <% if (typeof errors !== 'undefined' && errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(error) { %>
          <p class="mb-0"><%= error %></p>
        <% }); %>
      </div>
    <% } %>
    <% if (typeof messages !== 'undefined' && messages && messages.length) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(message) { %>
          <p class="mb-0"><%= message %></p>
        <% }); %>
      </div>
    <% } %>

    <div class="mb-3">
      <label class="form-label">Book</label>
      <input class="form-control" value="<%= stock.title %>" disabled>
    </div>

    <div class="mb-3">
      <label class="form-label">Publisher</label>
      <input class="form-control" value="<%= stock.publisher_name %>" disabled>
    </div>

    <form method="POST" action="/admin/stocks/<%= stock.book_id %>/<%= stock.publisher_id %>/edit">
      <div class="mb-3">
        <label class="form-label">Quantity *</label>
        <input type="number" class="form-control" name="quantity" min="0" step="1"
               value="<%= stock.quantity %>" required>
      </div>

      <div class="d-flex gap-2">
        <a href="/admin/stocks" class="btn btn-outline-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Save Changes</button>
      </div>
    </form>

    <form class="mt-3"
          method="POST"
          action="/admin/stocks/<%= stock.book_id %>/<%= stock.publisher_id %>/delete"
          onsubmit="return confirm('Are you sure you want to delete this stock entry?');">
      <button type="submit" class="btn btn-outline-danger">Delete</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
