<!DOCTYPE html>
<html>
<head>
  <title>New Stock Entry</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container py-4" style="max-width: 760px;">
    <h1 class="mb-3">New Stock Entry</h1>

    <% if (typeof errors !== 'undefined' && errors && errors.length) { %>
      <div class="alert alert-danger"><%= errors.join('<br>') %></div>
    <% } %>

    <form method="POST" action="/admin/stocks">
      <div class="mb-3">
        <label class="form-label">Book *</label>
        <select name="book_id" class="form-select" required>
          <option value="">-- Select Book --</option>
          <% (books || []).forEach(b => { %>
            <option value="<%= b.book_id %>"><%= b.title %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Publisher *</label>
        <select name="publisher_id" class="form-select" required>
          <option value="">-- Select Publisher --</option>
          <% (publishers || []).forEach(p => { %>
            <option value="<%= p.publisher_id %>"><%= p.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Quantity *</label>
        <input type="number" class="form-control" name="quantity" min="0" step="1" required>
      </div>

      <div class="d-flex gap-2">
        <a href="/admin/stocks" class="btn btn-outline-secondary">Cancel</a>
        <button class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
