<!DOCTYPE html>
<html>
<head>
  <title>Stocks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="mb-0">Stocks</h1>
      <a href="/admin/stocks/new" class="btn btn-primary">+ New Stock Entry</a>
    </div>

    <form class="row g-2 mb-3" method="GET" action="/admin/stocks">
      <div class="col-md-6">
        <input type="text" name="search" class="form-control"
               placeholder="Search book title or publisher"
               value="<%= (q && q.search) ? q.search : '' %>">
      </div>
      <div class="col-md-2">
        <button class="btn btn-outline-secondary w-100">Search</button>
      </div>
    </form>

    <% if (typeof errors !== 'undefined' && errors && errors.length) { %>
      <div class="alert alert-danger"><%= errors.join('<br>') %></div>
    <% } %>
    <% if (typeof messages !== 'undefined' && messages && messages.length) { %>
      <div class="alert alert-success"><%= messages.join('<br>') %></div>
    <% } %>

    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>Cover</th>
            <th>Book</th>
            <th>Publisher</th>
            <th class="text-center">Quantity</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% (stocks || []).forEach(s => { %>
            <tr>
              <td style="width:70px">
                <% if (s.image_url) { %>
                  <img src="<%= s.image_url %>" class="img-fluid" alt="cover">
                <% } %>
              </td>
              <td><a href="/books/<%= s.book_id %>"><%= s.title %></a></td>
              <td><%= s.publisher_name %></td>
              <td class="text-center"><%= s.quantity %></td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-primary"
                   href="/admin/stocks/<%= s.book_id %>/<%= s.publisher_id %>/edit">Edit</a>
                <form class="d-inline ms-1"
                      method="POST"
                      action="/admin/stocks/<%= s.book_id %>/<%= s.publisher_id %>/delete"
                      onsubmit="return confirm('Delete this stock entry?')">
                  <button class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
