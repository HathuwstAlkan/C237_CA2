<h2 class="card-title mb-4">Create Your Account</h2>

<!-- Flash messages for errors/success from server response -->
<div id="register-messages">
    <!-- Messages will be injected here by JavaScript -->
</div>

<form id="registerForm" action="/register" method="POST" class="mt-4">
    <div class="form-group mb-3">
        <label for="username" class="form-label text-start w-100">Username:</label>
        <input type="text" id="username" name="username" class="form-control" required
               <% if (typeof formData !== 'undefined' && formData && formData.username) { %> value="<%= formData.username %>" <% } %>>
    </div>
    <div class="form-group mb-3">
        <label for="email" class="form-label text-start w-100">Email:</label>
        <input type="email" id="email" name="email" class="form-control" required
               <% if (typeof formData !== 'undefined' && formData && formData.email) { %> value="<%= formData.email %>" <% } %>>
    </div>
    <div class="form-group mb-3">
        <label for="password" class="form-label text-start w-100">Password:</label>
        <input type="password" id="password" name="password" class="form-control" required>
    </div>
    <div class="form-group mb-3">
        <label for="address" class="form-label text-start w-100">Address:</label>
        <input type="text" id="address" name="address" class="form-control" required
               <% if (typeof formData !== 'undefined' && formData && formData.address) { %> value="<%= formData.address %>" <% } %>>
    </div>
    <div class="form-group mb-4">
        <label for="contact" class="form-label text-start w-100">Contact Number:</label>
        <input type="text" id="contact" name="contact" class="form-control" required
               <% if (typeof formData !== 'undefined' && formData && formData.contact) { %> value="<%= formData.contact %>" <% } %>>
    </div>
    <button type="submit" class="btn btn-outline-custom w-100">Register</button>
</form>
<button id="backToMainButtons" class="btn btn-link text-white-50 mt-3">Back</button>
