<div class="mb-2 d-flex align-items-center justify-content-between">
  <h4 class="mb-0">Related Books</h4>
</div>
<div class="row g-3">
  <% if (!related || related.length === 0) { %>
    <div class="col-12">
      <div class="text-muted">No related books found.</div>
    </div>
  <% } %>
  <% related.forEach(r => { %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <div class="card h-100">
        <% if (r.image_url) { %>
          <img src="<%= r.image_url %>" class="card-img-top" alt="cover">
        <% } %>
        <div class="card-body d-flex flex-column">
          <h6 class="card-title mb-1"><a href="/books/<%= r.book_id %>"><%= r.title %></a></h6>
          <small class="text-muted mb-2"><%= r.author || '' %></small>
          <div class="mt-auto fw-semibold">$<%= Number(r.price).toFixed(2) %></div>
        </div>
      </div>
    </div>
  <% }) %>
</div>
